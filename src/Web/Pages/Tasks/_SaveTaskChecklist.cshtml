<li>
  <form
    hx-post="@Url.Page("Index", "SaveChecklist")"
    hx-target="#target-modal"
    hx-push-url="false"
    hx-trigger="submit"
  >
    <div>
      <input 
        type="text" 
        class="input" 
        placeholder="Adicione um tÃ­tulo..."
