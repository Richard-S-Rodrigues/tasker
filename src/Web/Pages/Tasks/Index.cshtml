@page "/tasks"
@using Tasker.Domain.TaskAggregate.Enums
@model Tasker.Web.Pages.Tasks.Index
@{
  ViewData["Title"] = "Tarefas";
}

<div class="mt-4">
  <div class="is-flex is-justify-content-space-between is-align-items-center">
    <h2 class="is-size-1">@Model.Board.Name</h2>
    <button 
      class="button is-primary"
      hx-get="@Url.Page("Index", "SaveTaskModal", new { boardId = Model.Board.Id!.Value })"
      hx-target="#target-modal"
      hx-trigger="click"
      hx-push-url="false"
    >
      Criar nova tarefa
    </button>
  </div>
  <div id="target-result">
    <partial name="_Result" />
  </div>
  <div id="target-modal"></div>
</div>