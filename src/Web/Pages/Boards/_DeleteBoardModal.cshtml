@model Tasker.Web.Pages.Boards.ViewModels.BoardViewModel;

<div
  id="delete-board-modal"
  class="modal"
  _="on load add .is-active to me" 
>
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Excluir espaço</p>
    </header>
    <form
      hx-delete="@Url.Page("Index", "Board", new { id = Model.Id })"
      hx-target="#target-result"
      hx-push-url="false"
      hx-trigger="submit"
      hx-include="#delete-board-modal input"
      _="on htmx:afterRequest remove .is-active from <#delete-board-modal/>"
    >
      <section class="modal-card-body">
        <div>
          Tem certeza que deseja excluir o espaço <b>@Model.Name</b>?
        </div>
      </section>
      
      <footer class="modal-card-foot">
        <div class="buttons">
          <button 
            class="button"
            type="button"
            _="on click remove .is-active from <#delete-board-modal/>"
          >
            Cancelar
          </button>
          <button 
            type="submit" 
            class="button is-danger"
            disabled
            _="on change from closest <form/> or load
              if (<[required]:invalid/>).length > 0
                add @@disabled 
                then exit
              end
              remove @@disabled"
          >
            Confirmar
          </button>
        </div>
      </footer>
    </form>
  </div>
  <button 
    class="modal-close is-large" 
    _="on click remove .is-active from <#delete-board-modal/>">
  </button>
</div>
